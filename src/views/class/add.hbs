{{>header}}


{{>navbar}}

{{>sidebar}}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
	<div class="container-full">
		<!-- Content Header (Page header) -->
		<div class="content-header">
			<div class="d-flex align-items-center">
				<div class="me-auto">
					<h3 class="page-title">{{#if user}} ترمیم کلاس{{else}} اندراج کلاس{{/if}}</h3>
				</div>

			</div>
		</div>

		<!-- Main content -->
		<section class="content">
			<div class="row">
				<div class="col-lg-6 col-12">
					<div class="box">
						<div class="box-header with-border">
							<h4 class="box-title">کلاس {{#if classes}} ترمیم{{else}} شامل{{/if}} کرنے کا فارم</h4>
						</div>
						<!-- /.box-header -->
						<form class="form" method="post">
							{{#if classes}}
							<input type="hidden" name="id" value="{{classes.id}}" />
							{{/if}}
							<div class="box-body">
								<div class="row">
									<div class="col-md-12">
										<div class="form-group">
											<label class="form-label">کلاس</label>
											<input type="text" name="name" value="{{classes.name}}" class="form-control"
												required>
										</div>
									</div>
									<div class="col-md-12">
										<div class="form-group">
											<label class="form-label">سکشن</label>
											<div class="c-inputs-stacked">
												<input {{#ifEqual classes.section "لڑکوں" }}checked{{/ifEqual}} name="section"
													type="radio" id="male" value="لڑکوں" required>
												<label for="male" class="me-30">لڑکوں</label>
												<input {{#ifEqual classes.section "لڑکیوں" }}checked{{/ifEqual}} name="section"
													type="radio" id="female" value="لڑکیوں" required>
												<label for="female" class="me-30">لڑکیوں</label>
											</div>
										</div>
									</div>
								</div>
							</div>
							<!-- /.box-body -->
							<div class="box-footer">
								<button type="submit" class="btn btn-primary">
									<i class="ti-save-alt"></i>{{#if classes}} ترمیم کریں{{else}} جمع کریں{{/if}}
								</button>
								<button type="reset" class="btn btn-warning me-1">
									<i class="ti-trash"></i> صاف کریں
								</button>
							</div>
						</form>
					</div>
					<!-- /.box -->
				</div>
			</div>
			<!-- /.row -->

		</section>
		<!-- /.content -->
	</div>
</div>

{{>footer}}
<script src="/vendor_components/formatter/formatter.js"></script>
<script src="/vendor_components/formatter/jquery.formatter.js"></script>
